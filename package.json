{
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "gts lint",
    "clean": "gts clean",
    "select-anchor-version": "avm use 0.25.0",
    "anchor-build": "pnpm select-anchor-version && anchor build",
    "copy-generated": "copyfiles target/types/*.ts packages/kedgeree-sdk/generated",
    "compile": "pnpm anchor-build && pnpm copy-generated && tsc --project tsconfig.build.json",
    "_test": "jest --detectOpenHandles --coverage",
    "test": "pnpm select-anchor-version && BROWSER= anchor test",
    "cli": "ts-node ./packages/kedgeree-cli/index.ts",
    "fix": "gts fix"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.24.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^14.18.29",
    "chai": "^4.3.4",
    "copyfiles": "^2.4.1",
    "gts": "^3.1.1",
    "jest": "^29.0.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.0.1",
    "typescript": "~4.7.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react-native"
      ],
      "allowedVersions": {
        "jest": "28",
        "superstruct": "0.14.2"
      }
    }
  }
}
